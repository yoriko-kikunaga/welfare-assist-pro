rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user email is authorized
    function isAuthorizedUser() {
      return isAuthenticated() &&
             request.auth.token.email.matches('.*@acgaozora\\.com$');
    }

    // Client edits collection
    match /clientEdits/{aozoraId} {
      // Allow authenticated users from acgaozora.com domain to read/write
      allow read, write: if isAuthorizedUser();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
